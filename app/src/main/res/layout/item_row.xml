<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/itemTextViewUL"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_marginStart="8dp"
            android:padding="2dp" android:textStyle="bold" android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/itemTextViewUR"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:layout_marginEnd="24dp"
            android:padding="2dp" android:textStyle="bold" android:textSize="18sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/itemTextViewLL"
            app:layout_constraintTop_toBottomOf="@+id/itemTextViewUL" app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginStart="8dp"
            android:textSize="14sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/itemTextViewLR"
            app:layout_constraintTop_toBottomOf="@+id/itemTextViewUR" app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginEnd="24dp"
            android:textSize="14sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="15dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_twotone_trending_up_24"
            android:id="@+id/imageViewTrendUp"
            app:layout_constraintTop_toBottomOf="@+id/itemTextViewUR"
            app:layout_constraintEnd_toStartOf="@+id/itemTextViewLR" android:layout_marginEnd="4dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_baseline_trending_down_24"
            android:id="@+id/imageViewTrendDown"
            app:layout_constraintTop_toBottomOf="@+id/itemTextViewUR"
            app:layout_constraintEnd_toStartOf="@+id/itemTextViewLR" android:layout_marginEnd="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>